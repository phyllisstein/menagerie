[
    "trigger",
    "/app",
    {
        "name": "server-restart",
        "expression": [
            "anyof",
            [
                "name",
                "next.config.cjs",
                "wholename"
            ],
            [
                "name",
                "tsconfig.json",
                "wholename"
            ],
            [
                "name",
                "_app.tsx"
            ],
            [
                "name",
                "_document.tsx"
            ],
            [
                "name",
                "develop.sh"
            ]
        ],
        "command": [
            "./scripts/develop.sh",
            "serve"
        ],
        "append_files": false
    }
]
