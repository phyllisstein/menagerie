[
  "trigger",
  "/app",
  {
    "name": "watchman-bootstrap",
    "expression": [
      "anyof",
      [
        "dirname",
        "scripts/watchman"
      ],
      [
        "name",
        "scripts/develop.sh",
        "wholename"
      ]
    ],
    "command": [
      "./scripts/develop.sh",
      "watches"
    ],
    "append_files": false
  }
]
